@import "nib"
@font-face
   font-family Open-sans-r
   src url(../fonts/OpenSans-Regular.ttf)
@font-face
   font-family Open-sans-b
   src url(../fonts/OpenSans-Bold.ttf)
@font-face
   font-family Open-sans-l
   src url(../fonts/OpenSans-Light.ttf)
a:focus
	outline none
body
	background #f9f9f9
	margin 0
	padding 0
header
	width 100%
.Top
	background #fff
	border-bottom 2px solid #01AEF1
	margin 0px auto 0px auto
	position fixed
	width 100%
	&-cent
		margin 0px auto 0px auto
		width 60%
	&-izq
		text-align left
	&-der
		margin-top -82px
		float right

	&-der ul
		float right
		margin 28px 0px 0px 0px
		li
			display inline-block
			list-style none
			.atento
				background #41A3AD
				border 1px solid #41A3AD
				border-radius 4px
				color #fff
				transition .3s
				&:hover
					background #35919A
					color #fff

			a
				color #01AEF1
				font-family Open-sans-b
				padding 0.5em
				text-decoration none
				transition .3s
				&:hover
					color #0299D4


	&-izq, &-der
		display inline-block
		vertical-align top

	&-izq img
		padding 0.8em
		width 150px